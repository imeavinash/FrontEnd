<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.avinashbehera.sabera.Activity.CategoryActivity">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:id="@+id/categoryActivityParentLayout"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entertainment"/>

    <CheckBox android:id="@+id/checkbox_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movies"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV"
        android:onClick="onCheckboxClicked"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Academic"/>

    <CheckBox android:id="@+id/checkbox_science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Science"
        android:onClick="onCheckboxClicked"/>

    <CheckBox android:id="@+id/checkbox_tech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tech"
        android:onClick="onCheckboxClicked"/>

    <CheckBox android:id="@+id/checkbox_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:onClick="onCheckboxClicked"/>

    <CheckBox android:id="@+id/checkbox_politics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Politics"
        android:onClick="onCheckboxClicked"/>

    <CheckBox android:id="@+id/checkbox_geography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="geography"
        android:onClick="onCheckboxClicked"/>

    <CheckBox android:id="@+id/checkbox_literature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Literature"
        android:onClick="onCheckboxClicked"/>

    <CheckBox android:id="@+id/checkbox_philosophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Philosophy"
        android:onClick="onCheckboxClicked"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miscellaneous"/>

    <CheckBox android:id="@+id/checkbox_bullshit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bullshit"
        android:onClick="onCheckboxClicked"/>

    <CheckBox android:id="@+id/checkbox_no_bullshit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Bullshit"
        android:onClick="onCheckboxClicked"/>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Done"
        />

</LinearLayout>
</ScrollView>
